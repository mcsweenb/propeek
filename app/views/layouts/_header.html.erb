<div class="header-container">
  <header class="wrapper clearfix">
    <a href="/" class="site-logo"><b>Propeek</b></a>
    <nav>
      <ul>
        <li><a href="#how-works">How it works</a></li>
      </ul>
    </nav>
    <% if current_user %>
    <div class="profile-link logged-in">
      <a href="#" class="menu-toggle">
        <div class="profile-image" style="background:url(<%= current_user.avatar.url(:profile_thumb)%>) no-repeat; background-size: contain;"></div>
        <p>Hi, <%= current_user.first_name %><b></b></p>
      </a>
      <ul class="menu">
        <li><%= link_to "View your profile", profile_url(current_user) %></li>
        <li><%= link_to "Edit your profile", profile_private_url %></li>
        <li><%= link_to "Change settings", settings_url %></li>
        <li><%= link_to "Logout", logout_url %></li>
      </ul>
    </div>
    <% else %>
    <div class="profile-link">
      <%= link_to :Login, login_url%>
      <b>or</b> 
      <%= link_to :Join, register_url, class: :join %>
    </div>
    <% end %>
    <div class="clearfix"></div>    
  </header>  
  <%= render :partial => "layouts/flash" if flash[:notice] %>
</div>